<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/common_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_35"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="@dimen/margin_4"
            android:layout_height="@dimen/margin_16"
            android:background="@color/primary_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_title_color"
            android:textSize="16sp"
            android:text="报考热度监控"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_list_divider_height"
        android:background="@color/common_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_title_color"
            android:textSize="16sp"
            android:text="华中科技大学"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/first_title_color_light"
                android:textSize="13sp"
                android:text="学校关注指数据："/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FE7616"
                android:textSize="13sp"
                android:text="热度较高"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_2"
                android:textColor="#FE7616"
                android:textSize="13sp"
                android:text="66"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/first_title_color_light"
                android:textSize="13sp"
                android:text="/100分"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="100"
        android:textColor="@color/sub_title_color"
        android:textSize="11sp"/>

    <com.yongheng.ChartHot
        android:id="@+id/ch_heat_monitor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heat_chart_height"
        android:layout_marginTop="@dimen/line_size"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"/>

    <LinearLayout
        android:id="@+id/ll_heat_monitor_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>